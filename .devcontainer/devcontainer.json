{
  "name": "Python + Jupyter (DevContainer)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter"
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind",
    "source=${env:HOME}/.ssh/config,target=/home/vscode/.ssh/config,type=bind,readonly",
    "source=${env:HOME}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind,readonly"
    ],

  "containerEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "envFile": ".env",

"postCreateCommand": "bash -c 'set -a && source .env && set +a && git config --global user.name \"$GIT_USER_NAME\" && git config --global user.email \"$GIT_USER_EMAIL\"'",
"postStartCommand": "bash .devcontainer/start_jupyter.sh"

}
